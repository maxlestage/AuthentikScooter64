{% extends 'layout.html.twig' %}

{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/form.css">
    <link rel="stylesheet" href="/assets/css/shop.css">
{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div
                id="carouselExampleIndicators" class="carousel slide mt-3 mb-3" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner" role="listbox">
                <div class="carousel-item active">
                    <img class="d-block img-fluid w-100" src="http://www.authentikscooter.fr/topic/bv000005.jpg" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block img-fluid w-100" src="http://www.authentikscooter.fr/topic/bv000018.jpg" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block img-fluid w-100" src="http://www.authentikscooter.fr/topic/bv000014.jpg" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <!-- Page Content -->
    <div class="container">

        <div class="row">


            <!-- /.col-lg-3 -->
            <div class="col-lg-3">
                <h1 class="my-4">Scooters par marques:</h1>
                <div class="list-group">
                    <a href="/shop/index" class="list-group-item">Tous</a>
                    {% for marque in marques %}
                        <a href="/shop/index?marque={{ marque.id }}" class="list-group-item">{{ marque.name }}</a>
                    {% endfor %}
                </div>
            </div>

            <div class="col-lg-9">
                <div class="row">
                    {% for scooter in scooters %}
                        <div class="col-lg-4 col-md-6 mb-5">
                            <div class="card h-100">
                                <div class="card-body">
                                    <a href="#"><img class="card-img-top" src="https://5.imimg.com/data5/CW/ED/JN/SELLER-10979414/vespa-lml-star-stella-scooter-spare-parts-500x500.jpg" alt="lml"></a>
                                    <h4 class="card-title">
                                        <a href="#">{{ scooter.name }}</a>
                                    </h4>
                                    <p class="card-text">Modèle: {{ scooter.model }}</p>
                                    <p class="card-text">Prix: {{ scooter.price }}€</p>
                                    <p class="card-text">Couleur: {{ scooter.color }}</p>
                                    <p class="card-text">Km: {{ scooter.km }}</p>
                                    <p class="card-text">Cylindre: {{ scooter.cylinder }} cm&#xB3;</p>

                                    {% if scooter.engine == 0 %}
                                        <p class="card-text">Moteur: Auto</p>
                                    {% else %}
                                       <p class="card-text">Moteur: {{ scooter.engine }}T</p>
                                    {% endif %}
                                </div>
                                <div class="card-footer">
                                    <small class="text-dark">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                <!-- /.row -->





            </div>
            <!-- /.col-lg-9 -->

        </div>
        <!-- /.row -->

    </div>
{% endblock %}